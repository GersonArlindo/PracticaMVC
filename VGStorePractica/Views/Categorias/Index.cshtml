
@model IEnumerable<VGStorePractica.Models.Categorias>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Listado de Categorias</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Categorias" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Agregar Nueva Categoria</a>
            </div>
        </div>
        <br /><br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre de Categoria</th>
                        <th>Orden</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">
                                @obj.Nombre
                            </td>
                            <td width="50%">
                                @obj.Orden
                            </td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Categorias" asp-action="Edit" asp-route-Id="@obj.IdCategoria" class="btn btn-primary mx-2">Editar</a>
                                    <a asp-controller="Categorias" asp-action="Delete" asp-route-Id="@obj.IdCategoria" class="btn btn-danger mx-2">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No existen categorias</p>
        }

    </div>


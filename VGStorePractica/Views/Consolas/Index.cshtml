@model IEnumerable<VGStorePractica.Models.Consolas>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Listado de Consolas</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Consolas" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Agregar Nueva Consola</a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre de Consola</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="100%">
                            @obj.Nombre
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Consolas" asp-action="Edit" asp-route-Id="@obj.IdConsola" class="btn btn-primary mx-2"><i class="fas fa-edit"></i></a>
                                <a asp-controller="Consolas" asp-action="Delete" asp-route-Id="@obj.IdConsola" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No existen consolas</p>
    }

</div>
